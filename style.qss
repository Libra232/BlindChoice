QWidget {
    background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:1, stop:0 rgba(0, 0, 64, 255), stop:1 rgba(0, 0, 128, 255));
    color: white;
}

QPushButton {
    background-color: transparent;
    border: 2px solid white;
    border-radius: 5px;
    padding: 5px;
}

QPushButton:hover {
    background-color: rgba(255, 255, 255, 30);
}

QPushButton:pressed {
    background-color: rgba(255, 255, 255, 60);
}
